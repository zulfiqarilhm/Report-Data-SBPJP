<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/satelit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="{Satelit}"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/logoradar"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_below="@+id/satelit"
        android:layout_marginTop="15dp"
        android:src="@drawable/modis2"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/Tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal :"
        android:textSize="17sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:layout_below="@+id/satelit"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{ 12 / 00 / 2020 }"
        android:textSize="17sp"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_below="@+id/satelit"
        android:layout_marginLeft="88dp"/>

    <TextView
        android:id="@+id/jm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pukul      :"
        android:textSize="17sp"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"
        android:layout_below="@+id/satelit"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/jam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{ 00 : 00 : 00 }"
        android:textSize="17sp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="40dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_below="@+id/satelit"
        android:layout_marginLeft="88dp"/>



    <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{Hasil}"
        android:textSize="17sp"
        android:textColor="#F51515"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:layout_below="@+id/satelit"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/satelit"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"/>


















</RelativeLayout>