<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/satelit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="{Satelit}"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/logoradar"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_below="@+id/satelit"
        android:layout_marginTop="20dp"
        android:src="@drawable/radar2"
        android:paddingLeft="15dp"/>

    <TextView
        android:id="@+id/Tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal :"
        android:textSize="17sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_below="@+id/satelit"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{ 12 / 00 / 2020 }"
        android:textSize="17sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_below="@+id/satelit"
        android:layout_marginLeft="88dp"/>

    <TextView
    android:id="@+id/s1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Start"
    android:textSize="17sp"
        android:textColor="#000000"
    android:layout_below="@+id/satelit"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
    android:layout_toRightOf="@+id/logoradar"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{ 00 : 00 : 00 }"
        android:textSize="17sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_below="@+id/satelit"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="53dp"/>

    <TextView
        android:id="@+id/s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_below="@+id/satelit"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_marginLeft="207dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{ 00 : 00 : 00 }"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_below="@+id/satelit"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="53dp"/>

    <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{Hasil}"
        android:textSize="17sp"
        android:textColor="#F51515"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_below="@+id/satelit"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/satelit"
        android:layout_toRightOf="@+id/logoradar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"/>


















</RelativeLayout>